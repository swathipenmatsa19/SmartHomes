<html lang="en">
        <head>
          <!-- Required meta tags -->
          <meta charset="utf-8">
          <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      
         <% include ./partials/header %>
          <title>User's Profile!</title>
        </head>
       <body>
          <% snapshot.forEach(doc => { %>
            <%if(zip==doc.data().zipcode){%>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="/public/images/<%= doc.data().image2%>" width="500" height="500" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/public/images/<%= doc.data().image3%>" width="500" height="500" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/public/images/<%= doc.data().image4%>" width="500" height="500" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
    
    
          <div align="center">
                        
            Street:<%= doc.data().street %><br>
            city:  <%= doc.data().city %><br>
            State: <%= doc.data().state %><br>
            Zip code:<%= doc.data().zipcode %><br>
            Price:  <%= doc.data().price %>$<br>
            <!-- <button type="button" class="btn btn-primary">Contact Seller</button> -->
    
    </div>
    
              <% include ./partials/scripts %>
              <%}%>
              <% }) %>

          </body>
      </html>